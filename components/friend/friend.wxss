/* components/friend/friend.wxss */

.scroll_view{
  height: calc( 100% - 80rpx);
}
.scorll_container{
  padding: 20rpx;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.singer_item{
  width: calc(100% / 3);
  padding: 15rpx;
  box-sizing: border-box;
}
.singer_item .singer_item_img{
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}
.singer_name{
  font-size: 30rpx;
}