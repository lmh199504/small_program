/* components/playList/playList.wxss */
.playList{
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.5);
  width: 100%;
  height: 100%;
  z-index: 10;
}
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.scroll_view{
  height: 100%;
}
.list_container{
  width: 250px;
  height: 300px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #ffffff;
  border-radius: 5px;
}
.scroll_container{
  padding: 15rpx;
}
.music_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
  border-bottom: 1px solid #e3e3e3;
}
.songNmae{
  color: #333;
}
.singerName{
  color: #666;
}