/* pages/singerDetail/singerDetail.wxss */
page{
  height: 100%;
}
.mycontainer{
  height: 100%;
}
.singerInfo{
  position: relative;
  height: 500rpx;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
}
.info_wrapper{
  padding: 15rpx;
  box-sizing: border-box;
  margin-top: 300rpx;
}
.singer_pic{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.singer_name{
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
}
.funNum{
  color: #ffffff;
  font-size: 35rpx;
}
.singer_basic{
  color: #ffffff;
  font-size: 35rpx;
  width: 100%;
  display: flex;
}
.info_basic{
  max-width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.btn_basic{
  width: fit-content;
  color: #2ec17d;
}
.swiper_container{
  height: calc(100% - 580rpx);
}
.tab_wrapper{
  height: 80rpx;
  display: flex;
  justify-content: space-evenly; 
  line-height: 80rpx;
  font-size: 35rpx;
  background-color: #ffffff;
}
.tab_active{
  color: #2ec17d;
}
.swiper{
  background-color: #f2f2f2;
  height: 100%;
}
.swiper_item_container{
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx;
}
.item_box{
  width: calc(100% / 3);
  padding: 15rpx;
  box-sizing: border-box;
}

.item_box image{
  width: 100%;
  height: 220rpx;
}
.item_box .songname{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
}
.about{
  padding: 20rpx;
  color: #000000;
  font-size: 38rpx;
  line-height: 60rpx;
  text-indent: 2rem;
}

.mini-btn {
  margin-left: 10rpx;
  margin-top: 10rpx;
}