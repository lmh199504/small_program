page{
  height: 100%;
}
.mycontainer{
  height: 100%;
}
.scroll_view_y{
  height: 100%;
}
.scroll_container{
  padding: 20rpx;
  box-sizing: border-box;
}
.topItem{
  background-color: #f6f6f6;
  width: 100%;
  display: flex;
  margin-bottom: 30rpx;
  padding: 15rpx;
  box-sizing: border-box;
}
.topItem .left{
  width: 240rpx;
  height: 240rpx;
}
.topItem .left image{
  width: 100%;
  height: 100%;
}
.topItem .right{
  padding-left: 20rpx ;
  box-sizing: border-box;
  width: calc( 100vw - 300rpx );
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  color: #8F8F94;
  font-size: 30rpx;
}
.songInfo{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}