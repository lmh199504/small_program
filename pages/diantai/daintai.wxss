page{
  height: 100%;
}
.mycontainer{
  height: 100%;
}
.scroll_view_y{
  height: 100%;
}
.radio_container{
  padding: 15rpx;
}
.radioType{
  position: relative;
  color: #999;
  margin-bottom: 20rpx;
}
.radioType::after{
  content: "";
  position: absolute;
  height: 1px;
  overflow: hidden;
  left: 43px;
  right: 0;
  top: 10px;
  background-color: #ececec;
}
.radio_wrapper{
  display: flex;
  flex-wrap: wrap;
}
.radio_item{
  width: calc(100% / 3);
  padding: 10rpx;
  box-sizing: border-box;
}
.radio_item image{
  width: 100%;
  height: 200rpx;
  border-radius: 5px;
}
.radioName{
  color: rgba(0, 0, 0, 0.85);
  font-size: 35rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.listenNum{
  color: #999;
  font-size: 30rpx;
}