page{
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.mycontainer{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.title{
  color:rgb(0, 0, 0);
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 3%;
}
.music_list_container{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
  width: 94%;
  padding:1% 3%;
}
.music_list_item{
  width: 32%;
  height: 120px;
  border-radius: 10px;
  margin-top: 10px;
  text-align: center;
}
.cover_img{
  width: 100%;
  height: 100px;
  border-radius: 10px;
}
.list_title{
  font-size: 25rpx;
  color:rgb(92, 94, 93);
}

.music_item{
  width: 100%;
  height: 50px;
  padding: 3%;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 10px;
  position: relative;
}
.music_item:last-child{
  margin-bottom: 180rpx;
}

.music_cover{
  width: 50px;
  height: 50px;
  border-radius:10px; 
}
.music_item_right{
  padding-left: 10px;

}
.music_name{
  color:rgb(92, 90, 91);
  font-size: 25rpx;
}
.music_singer{
  color:rgb(191, 191, 191);
  font-size: 20rpx;
}
.right_icon{
  position: absolute;
  right: 10px;
  bottom: 10px;
}




/* 导航栏 */

.swiper-tab {
 
  display: flex;
  
  flex-direction: row;
  
  line-height: 80rpx;
  height: 80rpx;
  /* border-bottom: 2rpx solid #777; */
 
}
 
 
.tab-item {
 
  width: 33.3%;
  
  text-align: center;
  
  font-size: 15px;
  
  color: #777;
 
}

.swiper {
  min-height: 500rpx;
  height: calc(100vh - 80rpx);
  overflow: scroll;
  box-sizing: border-box;
  /* background: #dfdfdf; */
}
.scroll_view{
  height: 100%;
}
.on {
  color:rgb(21, 21, 23);
  font-size: 16px; 
  font-weight: bold;
}



/* 轮播图 */

.le-img {
  width: 100%;
  display: block;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
}
.le-img.le-active {
  transform: scale(1);
}


.slider{
  padding: 3%;
  border-radius: 10px;
  overflow: hidden;
  height: 150px;
  
}
.slider image{
  width: 100%;
  height: 150px;
  border-radius: 10px;
}
.slider swiper{
  height: 150px;
  border-radius: 10px;
}
.slider navigator{
  width: 100%;
  height: 100%;
}

.main_menu{
  display: flex;
  width: 100%;
  height: 60px;
  margin-bottom: 10px;
  border-bottom: 1px solid rgb(243, 243, 243);
}
.main_menu_item{
  width: 20%;
  text-align: center;
}
.main_menu_item image{
  width: 30px;
  height: 30px;
}
.main_menu_item_title{
  font-size: 10px;
  color:rgb(112, 111, 111);

}
.playAudio{
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  transition: all in 0.4s;
}
.playAudio.hidden {
  bottom: -60px;
} 
