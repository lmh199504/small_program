/* pages/meiri/meiri.wxss */
page{
  height: 100%;
}
.mycontainer{
  height: 100%;
  width: 100%;
}
.scroll_view_x{
  width: 100%;
  white-space:nowrap;
  height: 80rpx;
}
.scroll_view_x button {
  margin: 0 5px;
}
.scroll_view_y{
  height: calc(100% - 80rpx);
}
.music_list_container{
  display: flex;
  flex-wrap: wrap;
  /* justify-content:space-between; */
  width: 94%;
  padding:1% 3%;
  padding-bottom: 65px;
}
.music_list_item{
  width: calc(100% / 3);
  height: 120px;
  border-radius: 10px;
  margin-top: 10px;
  text-align: center;
  padding: 10rpx;
  box-sizing: border-box;
}
.cover_img{
  width: 100%;
  height: 100px;
  border-radius: 10px;
}
.list_title{
  font-size: 25rpx;
  color:rgb(92, 94, 93);
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  width: 100%;
  display: block;
}

.musicList_container_head{
  display: flex;
  padding-left: 20rpx;
  margin-top: 10rpx;
}